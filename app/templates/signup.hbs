<h3>Sign Up!</h3>

<form {{action 'signup' on='submit'}}>
  <div>{{input value=name placeholder="Enter your name..."}}</div>
  <div>{{input value=username placeholder="Enter your email..."}}</div>
  <div>{{input type='password' value=password placeholder="Enter your password..."}}</div>
  <button type='submit'>Sign Up</button>
</form>
