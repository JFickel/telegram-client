<div class="profile">
  <div class="user-header">
    <img class="avatar" src="img/avatar-turquoise.png"/>
    <div class="name">{{name}}</div>
    <div class="username">@{{id}}</div>
    <button class="blue-btn follow">Follow</button>
  </div>

  <div class="tab-header">
    {{#link-to 'user.posts' class="tab"}}Posts{{/link-to}}
    {{#link-to 'user.following' class="tab"}}Following{{/link-to}}
    {{#link-to 'user.followers' class="tab"}}Followers{{/link-to}}
  </div>

  <div class="users-list">
    <div class="user-block clearfix">
      <a class="avatar link">
        <img src="img/avatar-red.png"/>
      </a>
      <div class="name">
        <a class="link">John Maeda</a>
      </div>
      {{#if isNotCurrentUser}}
        <button class="blue-btn follow relative-center-y">
          Follow
        </button>
      {{/if}}
    </div>

    <div class="user-block clearfix">
      <a class="avatar link">
        <img src="img/avatar-yellow.png"/>
      </a>
      <div class="name">
        <a class="link">Clarke Wolfe</a>
      </div>
      <button class="blue-btn follow relative-center-y">
        Unfollow
      </button>
    </div>

    <div class="user-block clearfix">
      <a class="avatar link">
        <img src="img/avatar-green.png"/>
      </a>
      <div class="name">
        <a class="link">Fast Company</a>
      </div>
      <button class="blue-btn follow relative-center-y">
        Follow
      </button>
    </div>
  </div>
</div>
