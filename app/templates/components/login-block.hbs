<h2>Log In</h2>

<form class="auth-form" {{action 'login' on='submit'}}>
  {{input value=email placeholder="Enter your email..." class="auth-input"}}
  {{#if displayErrors}}
    {{errors.email}}
  {{/if}}
  {{input type='password' value=password placeholder="Enter your password..." class="auth-input"}}
  {{#if displayErrors}}
    {{errors.password}}
  {{/if}}
  <div class="form-footer clearfix">
    <button type='submit' class='blue-btn submit'>Log In</button>
    <button class='blue-btn' {{action 'githubLogin'}}>Github Login</button>
    <div class="alternatives">
      {{#link-to 'recover' class="blue-link"}}Recover Password{{/link-to}}
    </div>
  </div>
</form>
